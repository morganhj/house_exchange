
<div class="container" style="min-height: calc( 100vh - 300px);">
  <div class="row align-content-center justify-content-center" style="min-height: calc( 100vh - 300px);">
    <div class="col-md-4 align-items-center d-flex">
      <%= image_tag "login.png", class: "img-fluid"%>
    </div>
    <div class="col-md-6">
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions mb-3">
          <%= f.button :submit, "Log in", class: "btn-primary rounded-pill text-white" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    
    </div>
  </div>
</div>
