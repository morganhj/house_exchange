<section class="banner" style="background-image: url(<%= cl_image_path "banner", crop: :fill %>);">
      <div class="d-flex flex-column">
      <div class="row">
        <div class="col-lg-6">
          <h1>Feel like home</h1>
          <h1>wherever you go</h1>
          <br>
          <p>Trade houses with people all over the world and feel like a local wherever you are</p>
        </div>
      </div>
		<%= simple_form_for homes_path, url: homes_path, method: :get, html: { class: "form-inline d-block bg-white rounded-lg d-lg-flex justify-content-lg-between search-bar m-0 p-2" } do |f| %>
			<div class="form-group flex-grow-1">
				<input type="text" class="form-control w-100" placeholder="City" name="address" id="city">
			</div>
			<div class="d-xs-block d-sm-flex flex-sm-wrap justify-content-sm-between my-sm-2 my-lg-0">
				<div class="form-group ml-lg-2">
					<%= f.input :category, 
					collection: Home::CATEGORIES, 
					id: "inputState", 
					class: "form-control", 
						label: false,
						include_blank: false
						%>
				</div>
			</div>
			<div class="form-group ml-2">
					<%= f.submit "Search", class: "btn btn-primary w-100" %>
			</div>
		<% end %>
		</div>
  </section>

